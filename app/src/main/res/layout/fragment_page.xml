<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shad"
        android:orientation="vertical"
>
    <ScrollView
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/group_9"
            >
                <ImageView
                        android:id="@+id/group_2"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="14dp"
                        android:background="@mipmap/package_cigarette"
                        android:layout_centerVertical="true"/>
                <TextView
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:text="@string/all_smoke"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/top_text"
                        android:layout_centerVertical="true"

                        android:layout_marginLeft="54dp"

                        android:layout_alignParentLeft="true"/>
                <TextView
                        android:id="@+id/all_sigaret"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textAppearance="@style/number"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="194dp"
                        android:layout_alignParentLeft="true"
                />

            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
            >

                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/group_10"
                >
                    <TextView
                            android:id="@+id/similar_sigaret"
                            android:layout_width="79dp"
                            android:layout_height="53dp"
                            android:layout_marginTop="16dp"
                            android:text="200"
                            android:textAppearance="@style/big_number"
                            android:layout_gravity="center_horizontal"
                    />
                    <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="11dp"
                    >
                        <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="center_horizontal"
                                android:text="@string/sigar"
                                android:textColor="@color/text_color"
                                android:layout_centerVertical="true"
                        />
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/cigarette_icon"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                        />

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/group_10"
                >
                    <TextView
                            android:id="@+id/electronic_sigaret"
                            android:layout_width="79dp"
                            android:layout_height="53dp"
                            android:layout_marginTop="16dp"
                            android:text="250"
                            android:layout_gravity="center_horizontal"
                            android:textAppearance="@style/big_number"
                    />
                    <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="11dp"

                    >

                        <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:text="@string/electro_sigar"
                                android:textColor="@color/text_color"
                        />
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="5dp"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/e_cigarette"
                                android:textColor="@color/text_color"
                        />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/dp_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/group_11"

            >
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                >
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:background="@mipmap/clock"
                            android:layout_centerVertical="true"
                    />
                    <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:textColor="@color/text_color"
                            android:text="@string/total_number_of_cigarettes_smoked"
                            android:layout_centerVertical="true"
                    />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclelistview"
                        android:background="@color/recycle_background"
                        android:layout_marginLeft="14dp"
                android:outlineProvider="background">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>